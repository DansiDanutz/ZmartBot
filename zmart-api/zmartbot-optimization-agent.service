[Unit]
Description=ZmartBot Optimization Background Agent
Documentation=https://github.com/zmartbot/zmartbot
After=network.target
Wants=network.target

[Service]
Type=simple
User=dansidanutz
Group=staff
WorkingDirectory=/Users/dansidanutz/Desktop/ZmartBot/zmart-api
ExecStart=/usr/bin/python3 /Users/dansidanutz/Desktop/ZmartBot/zmart-api/comprehensive_optimization_integration.py --background
ExecStop=/bin/kill -TERM $MAINPID
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=10
StandardOutput=append:/Users/dansidanutz/Desktop/ZmartBot/logs/optimization_agent.log
StandardError=append:/Users/dansidanutz/Desktop/ZmartBot/logs/optimization_agent_error.log

# Environment variables
Environment=PYTHONPATH=/Users/dansidanutz/Desktop/ZmartBot/zmart-api
Environment=PYTHONUNBUFFERED=1

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/Users/dansidanutz/Desktop/ZmartBot/logs
ReadWritePaths=/Users/dansidanutz/Desktop/ZmartBot/zmart-api

# Resource limits
LimitNOFILE=65536
MemoryMax=2G
CPUQuota=50%

[Install]
WantedBy=multi-user.target