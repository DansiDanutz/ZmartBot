# ZmartBot Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///./zmart_database.db
SERVICE_REGISTRY_DB=./service_registry.db
PASSPORT_REGISTRY_DB=./data/passport_registry.db

# API Configuration
MAIN_API_PORT=8000
API_HOST=0.0.0.0
DEBUG_MODE=false

# External API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_SECRET_KEY=your_kucoin_secret_key_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here

# Cryptometer Configuration
CRYPTOMETER_API_KEY=your_cryptometer_api_key_here

# Trading Configuration
MAX_POSITION_SIZE=1000
RISK_PERCENTAGE=2.0
ENABLE_LIVE_TRADING=false

# Alert Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/zmartbot.log
ENABLE_PROMETHEUS=true

# Security
SECRET_KEY=your_secret_key_for_jwt_tokens_here
ENCRYPTION_KEY=your_encryption_key_here

# Service Endpoints
WEBSOCKET_PORT=8105
KINGFISHER_PORT=8098
CRYPTOMETER_PORT=8093