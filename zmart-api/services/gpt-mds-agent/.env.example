# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-organization-id-optional

# Service Configuration
HOST=0.0.0.0
PORT=8700
LOG_LEVEL=INFO

# ZmartBot Integration
REGISTRY_URL=http://localhost:8610
PORT_DB_PATH=port_registry.db
SERVICE_DB_PATH=src/data/service_registry.db

# GPT Model Configuration
PRIMARY_MODEL=gpt-4o
FALLBACK_MODEL=gpt-4o-mini
TEMPERATURE=0.1
MAX_TOKENS=4000
ENABLE_CACHE=true
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT=60
MAX_RETRIES=3
RETRY_DELAY=1

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8701

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
CORS_ORIGINS=["*"]
ALLOW_CREDENTIALS=true

# Development
DEBUG=false
RELOAD=false
