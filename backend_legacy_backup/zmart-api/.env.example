# ZmartBot Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ==========================
# ENVIRONMENT CONFIGURATION
# ==========================
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ==========================
# DATABASE CONFIGURATION
# ==========================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zmart_platform
DB_USER=zmart_user
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# ==========================
# REDIS CONFIGURATION
# ==========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================
# INFLUXDB CONFIGURATION
# ==========================
INFLUX_HOST=localhost
INFLUX_PORT=8086
INFLUX_TOKEN=your_influx_token_here
INFLUX_ORG=zmart
INFLUX_BUCKET=trading_data

# ==========================
# RABBITMQ CONFIGURATION
# ==========================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=zmart_user
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_VHOST=zmart_vhost

# ==========================
# SECURITY CONFIGURATION
# ==========================
# Generate secure keys: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ==========================
# CORS CONFIGURATION
# ==========================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# ==========================
# TRADING CONFIGURATION
# ==========================
DEFAULT_LEVERAGE=20
MAX_POSITION_SIZE=1000.0
MIN_POSITION_SIZE=10.0
RISK_FREE_RATE=0.02

# ==========================
# KUCOIN API CONFIGURATION
# ==========================
# Get from: https://www.kucoin.com/api
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_SECRET=your_kucoin_secret_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here
KUCOIN_BROKER_NAME=
KUCOIN_API_PARTNER=
KUCOIN_API_PARTNER_SECRET=

# ==========================
# CRYPTOMETER API CONFIGURATION
# ==========================
# Get from: https://cryptometer.io/api
CRYPTOMETER_API_KEY=your_cryptometer_api_key_here

# ==========================
# BINANCE API CONFIGURATION
# ==========================
# Get from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# ==========================
# OPENAI CONFIGURATION
# ==========================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_KEY_TRADING=your_openai_trading_key_here

# ==========================
# BLOCKCHAIN API KEYS (Optional)
# ==========================
ETHERSCAN_API_KEY=
SOLSCAN_API_KEY=
TRONSCAN_API_KEY=

# ==========================
# GROK X API CONFIGURATION (Optional)
# ==========================
X_API_KEY=
X_BEARER_TOKEN=
GROK_API_KEY=

# ==========================
# MONITORING & LOGGING
# ==========================
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=True
METRICS_PORT=9090

# ==========================
# RATE LIMITING
# ==========================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==========================
# FEATURE FLAGS
# ==========================
ENABLE_MOCK_MODE=False
ENABLE_PAPER_TRADING=True
ENABLE_LIVE_TRADING=False
ENABLE_AI_PREDICTIONS=False
ENABLE_KINGFISHER=False