# GptMDSagentService Environment Variables
# =======================================
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-optional

# Service Configuration
SERVICE_NAME=gpt-mds-agent
SERVICE_PORT=8700
SERVICE_HOST=0.0.0.0
SERVICE_ENV=development

# Model Configuration
PRIMARY_MODEL=gpt-4o
FALLBACK_MODEL=gpt-4o-mini
ADVANCED_MODEL=gpt-4-turbo
FUTURE_MODEL=gpt-5
MODEL_TEMPERATURE=0.1
MAX_TOKENS=4000

# ZmartBot Integration
REGISTRY_URL=http://localhost:8610
REGISTRY_TOKEN=your-registry-token-here
PORT_DB_PATH=/Users/dansidanutz/Desktop/ZmartBot/infra/port_manager.db
ORCHESTRATION_URL=http://localhost:8002

# Paths
MDC_OUTPUT_DIR=.cursor/rules/services
MDS_OUTPUT_DIR=.cursor/rules/systems
TEMPLATE_DIR=templates
CACHE_DIR=cache
LOG_DIR=logs

# Database
DB_PATH=/Users/dansidanutz/Desktop/ZmartBot/data/gpt_mds.db

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Monitoring
METRICS_PORT=9700
ENABLE_METRICS=true
ENABLE_TRACING=true
SENTRY_DSN=your-sentry-dsn-optional

# Feature Flags
ENABLE_CACHE=true
ENABLE_VALIDATION=true
ENABLE_AUTO_RETRY=true
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json