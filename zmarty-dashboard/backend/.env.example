# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/zmarty_dashboard

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Zmarty Dashboard API
VERSION=1.0.0

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Redis Configuration (for WebSocket sessions and caching)
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration (for Zmarty AI)
ZMARTY_API_KEY=sk-your-openai-api-key-here
ZMARTY_MODEL=gpt-4-turbo-preview
ZMARTY_MAX_TOKENS=4000

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@zmartydashboard.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS_PER_USER=3

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.csv,.json

# MCP Configuration (for Figma integration)
MCP_FIGMA_SERVER_URL=http://localhost:3001
MCP_FIGMA_TIMEOUT=30

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Security
TRUSTED_HOSTS=localhost,127.0.0.1,*.zmartydashboard.com

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=false

# Default Credit Costs (can be overridden via admin)
BASIC_QUERY_COST=1
MARKET_ANALYSIS_COST=3
TRADING_STRATEGY_COST=5
AI_PREDICTIONS_COST=8
LIVE_SIGNALS_COST=10
CUSTOM_RESEARCH_COST=25

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600