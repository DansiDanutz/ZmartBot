# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# MCP Configuration
VITE_MCP_ENABLED=true
VITE_MCP_SERVER_URL=http://localhost:3001

# Application Configuration
VITE_APP_NAME=Zmarty Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Powered Cryptocurrency Trading Dashboard

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CHAT_HISTORY=true
VITE_ENABLE_PERFORMANCE_METRICS=true

# UI Configuration
VITE_DEFAULT_THEME=light  # light, dark, system
VITE_DEFAULT_LANGUAGE=en
VITE_ENABLE_THEME_SWITCHING=true

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_HEARTBEAT_INTERVAL=30000

# Chart Configuration
VITE_DEFAULT_CHART_TIMEFRAME=1h
VITE_CHART_UPDATE_INTERVAL=30000  # 30 seconds
VITE_ENABLE_REAL_TIME_CHARTS=true

# Credit System Configuration
VITE_LOW_CREDIT_THRESHOLD=10
VITE_SHOW_CREDIT_WARNINGS=true
VITE_ENABLE_CREDIT_PURCHASE=true

# Development Configuration
VITE_DEBUG_MODE=false
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL=info  # debug, info, warn, error

# External Services
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_HOTJAR_ID=your-hotjar-id

# Social Links
VITE_SUPPORT_EMAIL=support@zmartydashboard.com
VITE_DISCORD_URL=https://discord.gg/zmarty
VITE_TWITTER_URL=https://twitter.com/zmarty
VITE_GITHUB_URL=https://github.com/zmarty/dashboard

# Legal Links
VITE_PRIVACY_POLICY_URL=/privacy
VITE_TERMS_OF_SERVICE_URL=/terms
VITE_COOKIE_POLICY_URL=/cookies