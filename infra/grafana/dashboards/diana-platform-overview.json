{
  "dashboard": {
    "id": null,
    "title": "Diana Platform Overview",
    "tags": ["diana", "platform", "overview"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Platform Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"prometheus|otel-collector|postgres|redis|rabbitmq\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "list",
              "inspect": false
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "unit": "none"
          },
          "overrides": []
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "maxDataPoints": 100,
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ],
            "fields": ""
          },
          "text": {},
          "textMode": "auto"
        },
        "pluginVersion": "10.1.0",
        "repeatDirection": "h",
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus_uid"
            },
            "expr": "sum(up{job=~\"prometheus|otel-collector|postgres|redis|rabbitmq\"})",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"zmart-api\"}[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 6,
          "y": 0
        },
        "xAxis": {
          "mode": "time",
          "name": null,
          "show": true,
          "values": []
        },
        "yAxes": [
          {
            "label": "Requests/sec",
            "max": null,
            "min": null,
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 3,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "postgresql_connections{job=\"postgres\"}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "yAxes": [
          {
            "label": "Connections",
            "max": null,
            "min": 0,
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=~\"zmart-api|otel-collector\"}/1024/1024",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 6
        },
        "yAxes": [
          {
            "label": "Memory (MB)",
            "max": null,
            "min": 0,
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 5,
        "title": "Trading Operations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(trading_operations_total)",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 6
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "mappings": [],
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "Event Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rabbitmq_queue_messages_published_total[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 6
        },
        "yAxes": [
          {
            "label": "Events/sec",
            "max": null,
            "min": 0,
            "show": true
